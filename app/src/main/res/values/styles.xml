<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="styleCharPropertiesTitle">
        <item name="android:fontFamily">@font/truenorg</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="styleCharPropertiesDescription">
        <item name="android:fontFamily">@font/truenoultlt</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="styleCharName">
        <item name="android:fontFamily">@font/truenoblk</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">58sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:lineSpacingMultiplier">0.7</item>
    </style>

    <style name="styleCharNameSmall">
        <item name="android:fontFamily">@font/truenoblk</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
